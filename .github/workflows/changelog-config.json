{
  "categories": [
    {
      "title": "## 🚀 Nuevas funcionalidades",
      "labels": ["feature", "enhancement"]
    },
    {
      "title": "## 🐛 Correcciones de errores",
      "labels": ["fix", "bug"]
    },
    {
      "title": "## 📝 Documentación",
      "labels": ["documentation"]
    },
    {
      "title": "## ⚙️ Otros cambios",
      "labels": []
    }
  ],
  "template": "${{CHANGELOG}}\n\n<details>\n<summary>Commits</summary>\n\n${{COMMITS}}</details>",
  "pr_template": "- ${{TITLE}} (#${{NUMBER}})",
  "empty_template": "- No hay cambios",
  "label_extractor": [
    {
      "pattern": "(.*feat|feature|enhancement)(.*):",
      "target": "feature",
      "flags": "gi"
    },
    {
      "pattern": "(.*fix|bug)(.*):",
      "target": "fix",
      "flags": "gi"
    },
    {
      "pattern": "(.*doc)(.*):",
      "target": "documentation",
      "flags": "gi"
    }
  ],
  "max_tags_to_fetch": 200,
  "max_pull_requests": 200,
  "max_back_track_time_days": 365,
  "tag_resolver": {
    "method": "semver"
  }
}
